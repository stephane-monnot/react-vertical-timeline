{
  "name": "@kiranyela/react-vertical-timeline-component",
  "version": "4.0.0",
  "description": "Vertical timeline for React.js",
  "main": "dist-modules",
  "module": "dist-es6",
  "style": "style.min.css",
  "files": [
  "dist-es6",
  "dist-modules",
  "style.min.css",
  "style.css",
  "src"
],
  "scripts": {
    "start": "vite",
    "test": "jest",
    "lint": "eslint src/**/*.js __tests__/**/*.js",
    "dist": "npm run prepublishOnly",
    "dist:css": "cleancss -o style.min.css style.css",
    "dist:es6": "del-cli ./dist-es6 && cross-env BABEL_ENV=es6 babel ./src --out-dir ./dist-es6",
    "dist:modules": "del-cli ./dist-modules && cross-env BABEL_ENV=modules babel ./src --out-dir ./dist-modules",
    "prepublishOnly": "npm run dist:es6 && npm run dist:modules && npm run dist:css"
  },
  "peerDependencies": {
    "react": "^16.8.6 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.6 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "prop-types": "^15.8.1",
    "react-intersection-observer": "^9.5.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@vitejs/plugin-react": "^5.1.3",
    "babel-jest": "^30.2.0",
    "clean-css-cli": "^5.6.3",
    "cross-env": "^7.0.2",
    "del-cli": "^4.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "vite": "^7.3.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "keywords": [
  "react",
  "vertical-timeline",
  "react-vertical-timeline-component",
  "react-19",
  "react-19-support"
]
}